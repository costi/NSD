<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
    <head>
		<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    	<%=stylesheet_link_tag 'style'%>
		<%=javascript_include_tag :defaults %>
				
        <title>National Signs and Designs - <%=page_title%></title>
    </head>
    <body>
    	<div id="menu">
    		<ul>
    			
    			<%menu_items.each do |link|%>
					<li><%=link_to link[:text], link[:address], :class => link[:class]%></li>	
				<%end%>
    		</ul>
    	</div>
		<div id="logo">
			<%=image_tag 'logo.png', :size => "456x52", :alt => "Logo: National Signs and Designs - your imagination is our creation" %>
		</div>
		
		<div id="content">
			<div class="contentBox">
				content
			</div>
			<div class="accentContentBox">
				accent
			</div>
			
			<div class="contentBox smallBox">
				
			</div>
			<div class="contentBox smallBox">
				
			</div>
			<div class="contentBox smallBox">
				
			</div>
			<%=yield%>
		</div>

    </body>
