<h1>Listing uploads</h1>

<table>
  <tr>
    <th>Original filename</th>
    <th>Filename</th>
    <th>Content type</th>
    <th>Company</th>
    <th>Person</th>
    <th>Description</th>
  </tr>

<% @uploads.each do |upload| %>
  <tr>
    <td><%=h upload.original_filename %></td>
    <td><%=h upload.filename %></td>
    <td><%=h upload.content_type %></td>
    <td><%=h upload.company %></td>
    <td><%=h upload.person %></td>
    <td><%=h upload.description %></td>
    <td><%= link_to 'Download', download_upload_path(upload) %></td>
    <td><%= link_to 'Delete', upload, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New upload', new_upload_path %>