<div class="topContent">

<h1>Upload a File for Our Sign Company - National Signs and Design</h1>

<p>
	Use this form to send files that are to big to send as email attachments.<br />
	We will be automatically notified by email when this upload is done.
</p>
</div>

<div class="box contentBox" style="width:400px; margin: auto;">
	<% form_for(@upload, :html => {:multipart => true}) do |f| %>
	  <%= f.error_messages %>
	
	
	  <p>
	    <%= f.label :file %><br />
	    <%= f.file_field :file %>
	  </p>
	  <p>
	    <%= f.label :company %> (required)<br />
	    <%= f.text_field :company, :size => 30 %>
	  </p>
	  <p>
	    <%= f.label :person %> (required)<br />
	    <%= f.text_field :person, :size => 30 %>
	  </p>
	  <p>
	    <%= f.label :description %> (optional)<br />
	    <%= f.text_area :description, :rows => 4, :cols => 35 %>
	  </p>
	  <p>
	    <%= f.submit 'Upload', :disable_with => "Please wait..." %>
	  </p>
	<% end %>
	
</div>